# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_public_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_secret_key

# ProxyAPI для ChatGPT
PROXYAPI_KEY=your_proxyapi_key
OPENAI_MODEL=gpt-4o-mini

# FastAPI
FASTAPI_ENV=development
FASTAPI_DEBUG=true
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# JWT Секреты
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email (для уведомлений)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@advertising-marketplace.com

# Приложение
APP_NAME=Advertising Marketplace MVP
PLATFORM_COMMISSION_PERCENT=10

# ========== ПЛАТЁЖНЫЕ СИСТЕМЫ ==========
YOOMONEY_WALLET_NUMBER=410012345678901
YOOMONEY_API_KEY=your_yoomoney_api_key_here
YOOMONEY_REDIRECT_URL=http://localhost:8000/payments/yoomoney/callback

SBP_BANK_ID=100000000111
SBP_MERCHANT_ID=your_merchant_id
SBP_API_KEY=your_sbp_api_key

# ========== ФИНАНСОВЫЕ ПАРАМЕТРЫ ==========
MIN_DEPOSIT_AMOUNT=100
MAX_DEPOSIT_AMOUNT=500000
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=500000

WEBHOOK_SECRET=your-webhook-secret-key

# ========== PHASE 2: REDIS ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========== PHASE 2: WEBSOCKET ==========
WEBSOCKET_CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# ========== PHASE 2: EMAIL (SendGrid) ==========
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@advertising-marketplace.com
SENDGRID_FROM_NAME=Advertising Marketplace

# Альтернатива: SMTP (уже настроено выше)
SMTP_USE_TLS=true

# ========== PHASE 2: VK API ==========
VK_SERVICE_KEY=your_vk_service_token_here

# ========== PHASE 2: TELEGRAM ==========
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ========== PHASE 2: BACKGROUND TASKS ==========
ENABLE_BACKGROUND_TASKS=true

# ========== FRONTEND URL ==========
FRONTEND_URL=http://localhost:3000

